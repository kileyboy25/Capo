<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.broadgames.capo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:parentActivityName=".HomeScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.broadgames.capo.HomeScreenActivity" />
        </activity>
        <activity
            android:name=".HomeScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:parentActivityName=".LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.broadgames.capo.LoginActivity" />
        </activity>
        <activity
            android:name=".ProposeRideActivity"
            android:label="@string/title_activity_propose_ride"
            android:parentActivityName=".HomeScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.broadgames.capo.HomeScreenActivity" />
        </activity>
        <activity
            android:name=".RequestRideActivity"
            android:parentActivityName=".HomeScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.broadgames.capo.HomeScreenActivity" />
        </activity>
    </application>

</manifest>